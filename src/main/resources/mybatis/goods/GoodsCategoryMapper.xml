<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.goods.dao.GoodsCategoryDao">

	<select id="get" resultType="com.bootdo.goods.domain.GoodsCategoryDO">
		select `category_id`,`parent_id`,`category_name`,`image`,`state`,`simple_describe`,`recommend`,`create_time`,`update_time`,`admin_id` from t_goods_category where category_id = #{value}
	</select>

	<select id="list" resultType="com.bootdo.goods.domain.GoodsCategoryDO">
		select `category_id`,`parent_id`,`category_name`,`image`,`state`,`simple_describe`,`recommend`,`create_time`,`update_time`,`admin_id` from t_goods_category
        <where>  
		  		  <if test="categoryId != null and categoryId != ''"> and category_id = #{categoryId} </if>
		  		  <if test="parentId != null and parentId != ''"> and parent_id = #{parentId} </if>
		  		  <if test="categoryName != null and categoryName != ''"> and category_name = #{categoryName} </if>
		  		  <if test="image != null and image != ''"> and image = #{image} </if>
		  		  <if test="state != null and state != ''"> and state = #{state} </if>
		  		  <if test="simpleDescribe != null and simpleDescribe != ''"> and simple_describe = #{simpleDescribe} </if>
		  		  <if test="recommend != null and recommend != ''"> and recommend = #{recommend} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		  <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
		  		  <if test="adminId != null and adminId != ''"> and admin_id = #{adminId} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by category_id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from t_goods_category
		 <where>  
		  		  <if test="categoryId != null and categoryId != ''"> and category_id = #{categoryId} </if>
		  		  <if test="parentId != null and parentId != ''"> and parent_id = #{parentId} </if>
		  		  <if test="categoryName != null and categoryName != ''"> and category_name = #{categoryName} </if>
		  		  <if test="image != null and image != ''"> and image = #{image} </if>
		  		  <if test="state != null and state != ''"> and state = #{state} </if>
		  		  <if test="simpleDescribe != null and simpleDescribe != ''"> and simple_describe = #{simpleDescribe} </if>
		  		  <if test="recommend != null and recommend != ''"> and recommend = #{recommend} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		  <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
		  		  <if test="adminId != null and adminId != ''"> and admin_id = #{adminId} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.bootdo.goods.domain.GoodsCategoryDO" useGeneratedKeys="true" keyProperty="categoryId">
		insert into t_goods_category
		(
			`parent_id`, 
			`category_name`, 
			`image`, 
			`state`, 
			`simple_describe`, 
			`recommend`, 
			`create_time`, 
			`update_time`, 
			`admin_id`
		)
		values
		(
			#{parentId}, 
			#{categoryName}, 
			#{image}, 
			#{state}, 
			#{simpleDescribe}, 
			#{recommend}, 
			#{createTime}, 
			#{updateTime}, 
			#{adminId}
		)
	</insert>
	 
	<update id="update" parameterType="com.bootdo.goods.domain.GoodsCategoryDO">
		update t_goods_category 
		<set>
			<if test="parentId != null">`parent_id` = #{parentId}, </if>
			<if test="categoryName != null">`category_name` = #{categoryName}, </if>
			<if test="image != null">`image` = #{image}, </if>
			<if test="state != null">`state` = #{state}, </if>
			<if test="simpleDescribe != null">`simple_describe` = #{simpleDescribe}, </if>
			<if test="recommend != null">`recommend` = #{recommend}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}, </if>
			<if test="adminId != null">`admin_id` = #{adminId}</if>
		</set>
		where category_id = #{categoryId}
	</update>
	
	<delete id="remove">
		delete from t_goods_category where category_id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from t_goods_category where category_id in 
		<foreach item="categoryId" collection="array" open="(" separator="," close=")">
			#{categoryId}
		</foreach>
	</delete>

</mapper>